<% @projects.each do |pro| %>

  <div class="col-md-4">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <p>
          <form action="<%= projects_delete_path %>" method="post">
              <input type="text" name="code" value="<%= pro.id %>" style = "visibility:hidden">
              <button type="submit" class="btn btn-danger pull-right" name="button">X</button>
          </form>
        </p>
        <p><%= pro.title %></p>
      </div>
      <div class="panel-body">
        <img src="http://placezombie.com/150x80 " class="img-responsive" style="width:100%" alt="Image">
        <p>Precio: <%= pro.price %></p>
      </div>
      <div class="panel-footer"><%= pro.description %></div>
    </div>
  </div>
<br>
<% end %>

