<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Ingresar</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <form class="form-signin">
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true,class:"form-control" %>
                  </div>
                  <div class="field">
                    <%= f.label :password %><br/>
                    <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
                  </div>


                    <div class="actions">
                      <%= f.submit "Ingresar",class:"btn btn-lg btn-primary btn-block" %>
                    </div>


                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me,class:'checkbox'%>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>

                  <a href="<%= new_user_registration_path  %>" class="right text-center new-account">Crear una cuenta </a>
                  <%= link_to "Atras", :back, class: "pull-left" %>
                </form>
            </div>

          <!--
            <%= render "devise/shared/links" %> -->
        </div>
    </div>
</div>
<% end %>
